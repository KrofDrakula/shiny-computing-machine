#!/usr/bin/env node

var fs      = require('fs'),
    path    = require('path'),
    program = require('commander'),
    encode  = require('../src/secrecy').encode,
    about   = `  (づ ￣ ³￣)づ   Ⓗ Ⓤ Ⓢ Ⓗ

  FLAPPY LIPS SINK SPACESHIPS!`;

program
  .description(about)
  .option('-o, --obfuscate', 'Use obfuscation when encoding')
  .option('-d, --decode', 'Decode a message')
  .parse(process.argv);

// configure and set up listeners for STDIN
process.stdin.setEncoding('utf8');
process.stdin.on('readable', onStdInReadable);
process.stdin.on('end', onStdInEnd);


function processChunk(data) {
  if (program.decode) {
    endProgram('Not implemented!');
  } else {
    console.log(secrecy.encode(data, !!program.obfuscate));
    endProgram();
  }
}

function onStdInReadable() {
  let chunk = process.stdin.read();
  if (chunk !== null)
    console.log(chunk);
}

function onStdInEnd() {
  endProgram();
}

function endProgram(error) {
  if (error) {
    console.error(error);
    process.exit(1);
  }
  process.exit(0);
}
